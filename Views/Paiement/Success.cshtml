@{
    ViewData["Title"] = "Paiement Réussi";
}
<!-- Le paiement est reussi et ont redirige vers les factures, commandes ou revenir a la boutique-->
<div class="container mt-5">
    <div class="alert alert-success text-center shadow-sm p-4 rounded-3">
        <p class="fs-5">@ViewBag.Message</p>

        <div class="mt-4 d-flex justify-content-center gap-3">
            <a asp-controller="Invoice" asp-action="Index" class="btn btn-outline-primary">
                 Voir mes factures
            </a>
            <a asp-controller="Order" asp-action="Index" class="btn btn-outline-secondary">
                 Voir mes commandes
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">
                 Revenir à la boutique
            </a>
        </div>
    </div>
</div>
