@model INF27523_TP1_ML_SS.Models.Product

@{
    ViewData["Title"] = "Ajouter un produit";
}

<h2>Ajouter un produit</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="Title" class="form-label">Nom du produit</label>
        <input type="text" class="form-control" asp-for="Title" required>
    </div>

    <div class="mb-3">
        <label for="Price" class="form-label">Prix</label>
        <input type="number" class="form-control" asp-for="Price" step="0.01" required>
    </div>

    <div class="mb-3">
        <label for="Category" class="form-label">Catégorie</label>
        <input type="text" class="form-control" asp-for="Category" required>
    </div>

    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea class="form-control" asp-for="Description" required></textarea>
    </div>

    <div class="mb-3">
        <label for="Image" class="form-label">URL de l'image</label>
        <input type="url" class="form-control" asp-for="Image" required>
    </div>

    <input type="hidden" asp-for="Rating.Rate" value="0" />
    <input type="hidden" asp-for="Rating.Count" value="0" />

    <button type="submit" class="btn btn-primary">Ajouter</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
